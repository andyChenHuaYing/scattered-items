<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

    <bean id="h1" class="org.oscar.springmvc.schema.interceptors.HandlerInterceptorOne"/>
    <bean id="h2" class="org.oscar.springmvc.schema.interceptors.HandlerInterceptorTwo"/>
    <bean id="h3" class="org.oscar.springmvc.schema.interceptors.HandlerInterceptorThree"/>
    <bean id="h4" class="org.oscar.springmvc.schema.interceptors.HandlerInterceptorFour"/>

    <bean id="watchingResponseTime"
          class="org.oscar.springmvc.schema.interceptors.WatchingResponseTimeHandlerInterceptor"/>
    <!-- HandlerMapping -->
    <bean class="org.springframework.web.servlet.nextHandler.BeanNameUrlHandlerMapping">
        <property name="interceptors">

            <!-- Success HandlerInterceptor execution
            <list>
                <ref bean="h1"/>
                <ref bean="h2"/>
            </list>-->

            <!-- Fail HandlerInterceptor execution
            <list>
                <ref bean="h3"/>
                <ref bean="h4"/>-->
            <list>
                <ref bean="watchingResponseTime"/>
            </list>
        </property>
    </bean>
    <!-- HandlerAdapter -->
    <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter"/>

    <!-- Success HandlerInterceptor execution -->
    <bean name="/successHandlerInterceptor" class="org.oscar.springmvc.schema.controller.HandlerInterceptorController"/>

    <!-- Fail HandlerInterceptor execution -->
    <bean name="/failHandlerInterceptor" class="org.oscar.springmvc.schema.controller.HandlerInterceptorController"/>

    <!-- Watching response time HandlerInterceptor -->
    <bean name="/watchingResponseTime"
          class="org.oscar.springmvc.schema.controller.HandlerInterceptorController"/>
</beans>
